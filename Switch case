#include <stdio.h>
int main()
{

printf("Enter any number from 1-7");

    scanf("%d",&x);

    switch(x)

    {

      case 1:

        printf("\n Sunday");

        break;

        

        case 2:

          printf("\n Monday");

          break;

          case 3:

            printf("\n Tuesday");

            break;

            case 4:

              printf("\n Wednessday");

              break;

              case 5:

                printf("\n Thursday");

                break;

                case 6:

                  printf("\n Friday");

                  break;

                  case 7:

                    printf("\n Saturday");

                    break;

                    default:

                      printf("Not valid");

    }

}
